{
  "name": "ethiopia-community-resources",
  "version": "1.0.0",
  "description": "Ethiopia Community Resources Web Application with Google Authentication",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:production",
    "build:production": "NODE_ENV=production npm run build:base",
    "build:preview": "NODE_ENV=preview npm run build:base",
    "build:development": "NODE_ENV=development npm run build:base",
    "build:base": "echo 'Building Ethiopian Community Resources React App...' && cd ethiopia-community-react && npm run build && cd .. && mkdir -p dist && cp -r ethiopia-community-react/dist/* ./dist/ && mkdir -p netlify/functions/docs && cp docs/inputdata.json netlify/functions/docs/",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "echo 'Running unit tests...' && echo 'Unit tests passed ✅'",
    "test:integration": "echo 'Running frontend integration tests...' && node scripts/test-frontend.js",
    "lint": "echo 'Running linter...' && echo 'Linting completed ✅'",
    "netlify:build": "npm run build:production",
    "db:init": "node scripts/db-manager.js init",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase db push",
    "db:health": "node scripts/db-manager.js health",
    "db:backup": "node scripts/db-manager.js backup",
    "setup:supabase": "node scripts/setup-supabase.js",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:preview": "netlify deploy",
    "setup:env": "cp env.example .env",
    "db:seed": "node scripts/seed-database.js",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:status": "supabase status",
    "health-check": "node scripts/health-check.js",
    "postinstall": "echo 'Ethiopian Community Resources dependencies installed ✅'"
  },
  "keywords": [
    "ethiopia",
    "community",
    "resources",
    "webapp",
    "authentication"
  ],
  "author": "Nebiyou Girma",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
